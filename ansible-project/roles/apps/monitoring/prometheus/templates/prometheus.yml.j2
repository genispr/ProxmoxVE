---
global:
  scrape_interval: {{ monitoring_metrics.scrape_interval }}
  evaluation_interval: {{ monitoring_metrics.evaluation_interval }}
  external_labels:
    environment: homelab

scrape_configs:
  - job_name: 'node_exporter'
    scheme: https
    tls_config:
      ca_file: {{ monitoring_config_dir }}/certs/node_exporter.crt
      insecure_skip_verify: true
    basic_auth:
      username: prometheus
      password: {{ monitoring_metrics_password }}
    static_configs:
      - targets: ['node_exporter:{{ monitoring.node_exporter_port }}']

  - job_name: 'proxmox'
    static_configs:
      - targets: ['localhost:9221']

alerting:
  alertmanagers:
    - static_configs:
        - targets:
          - alertmanager:9093

rule_files:
  - /etc/prometheus/rules/*.yml

storage:
  tsdb:
    retention.time: {{ monitoring_metrics.retention_days }}d
