global:
  resolve_timeout: 5m
  slack_api_url: "{{ monitoring_alert_slack_webhook }}"

route:
  group_by: ['alertname', 'severity']
  group_wait: 30s
  group_interval: 5m
  repeat_interval: 1h
  receiver: 'slack-notifications'

receivers:
  - name: 'slack-notifications'
    slack_configs:
      - channel: '#alerts'
        title: '[{{ severity | upper }}] {{ alertname }}'
        text: "{{ .CommonAnnotations.description }}"
