---
# Recyclarr Configuration Template
# Generated by Ansible

# Radarr Configurations
{% if radarr_instances is defined %}
radarr:
{% for instance in radarr_instances %}
  {{ instance.name }}:
    base_url: {{ instance.base_url }}
    api_key: {{ instance.api_key }}
    delete_old_custom_formats: true
    replace_existing_custom_formats: true
    quality_profiles:
      - name: HD-1080p
        reset_unmatched_scores: true
        qualities:
          - name: Remux-1080p
            score: 1000
          - name: Bluray-1080p
            score: 750
          - name: WEB-1080p
            score: 500
    custom_formats:
      - trash_ids:
          # HDR Formats
          - 4e61a884-f048-4a35-b647-dc1e1d5f582e # HDR10
          - 9b27ab13-c92d-4c84-9cd9-ad965f449856 # HDR10+
          # Audio Formats
          - 417804f7-b523-4232-b5cc-cdc0e0c7d111 # TrueHD ATMOS
          - 1f733af6-4d80-4ff0-a8b5-4c0a16805e90 # DTS-HD MA
          - 3cafb66f-48f9-4e63-9b9b-51af2145eb2c # DTS-X
          # Video Quality
          - 9c38dec0-7fee-4441-a3d7-41bd9099cad6 # x265
          - 9f98f8f0-1f86-4a8f-b4c9-81bb5c836273 # x264
{% endfor %}
{% endif %}

# Sonarr Configurations
{% if sonarr_instances is defined %}
sonarr:
{% for instance in sonarr_instances %}
  {{ instance.name }}:
    base_url: {{ instance.base_url }}
    api_key: {{ instance.api_key }}
    delete_old_custom_formats: true
    replace_existing_custom_formats: true
    quality_profiles:
      - name: HD-1080p
        reset_unmatched_scores: true
        qualities:
          - name: WEBDL-1080p
            score: 500
          - name: HDTV-1080p
            score: 250
    custom_formats:
      - trash_ids:
          # HDR Formats
          - 4e61a884-f048-4a35-b647-dc1e1d5f582e # HDR10
          - 9b27ab13-c92d-4c84-9cd9-ad965f449856 # HDR10+
          # Audio Formats
          - 417804f7-b523-4232-b5cc-cdc0e0c7d111 # TrueHD ATMOS
          - 1f733af6-4d80-4ff0-a8b5-4c0a16805e90 # DTS-HD MA
          # Video Quality
          - 9c38dec0-7fee-4441-a3d7-41bd9099cad6 # x265
          - 9f98f8f0-1f86-4a8f-b4c9-81bb5c836273 # x264
{% endfor %}
{% endif %} 
